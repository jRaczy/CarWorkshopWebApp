@model IEnumerable<CarWorkshop.Models.Client>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class=" text-primary">List of current Users</h2>
        </div>
        <div class="col-6">
            Create new Item
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        User Name
                    </th>
                    <th>
                        Id
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%"></td>
                        <td width="30%">@item.Id</td>
                        <td width="30%">@item.FirstName</td>
                    </tr>
                }
                </tbody> 
        </table>
        }


</div>