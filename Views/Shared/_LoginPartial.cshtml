@inject Microsoft.AspNetCore.Identity.SignInManager<CarWorkshop.Models.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li>Hello, @User.Identity.Name! </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()" class="float-left">Log off</a></li>
        </ul>
    </form>
}
else
{
<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link" id="registerLink" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="loginLink" asp-controller="Account" asp-action="Login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="loginLink" asp-controller="Account" asp-action="Login">Check status</a>
    </li>
</ul>
}