@model IEnumerable<CarWorkshop.Models.Appointment>

@{
    ViewData["Title"] = "Index";
}
<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of repairs of a given car</h2>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Date of repair
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.EndDate" - "@item.StartDate</td>
                        <td>@item.Description</td>
                        <td>@item.Status</td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Repair" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Repair" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                                @if (item.Status == "Closed")
                                {
                                    <a asp-controller="Repair" asp-action="CloseAppointment" asp-route-Id="@item.Id" class="btn btn-primary mx-1 disabled">Close appointment</a>
                                }
                                else
                                {
                                    <a asp-controller="Repair" asp-action="CloseAppointment" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Close appointment</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
