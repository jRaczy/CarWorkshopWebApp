@model CarWorkshop.Models.Car
@{
    ViewData["Title"] = "Update";
}

<form class="row g-3" method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="col-md-12">
        <label for="inputZip" class="form-label">Client Id</label>
        <input type="number" class="form-control" id="inputClientId" placeholder="Number VIN" asp-for="ClientId">
    </div>
    <div class="col-12">
        <label for="inputName" class="form-label">Mark</label>
        <input type="text" class="form-control" id="inputName" placeholder="Mark of car" asp-for="Mark">
    </div>
    <div class="col-12">
        <label for="inputSurname" class="form-label">Model</label>
        <input type="text" class="form-control" id="inputSurname" placeholder="Model of car" asp-for="Model">
    </div>
    <div class="col-md-12">
        <label for="inputAddress" class="form-label">Year of Production</label>
        <input type="number" class="form-control" id="inputAddress" placeholder="Year of production" asp-for="YearOfProduction">
    </div>
    <div class="col-md-12">
        <label for="inputCity" class="form-label">Plate Number</label>
        <input type="text" class="form-control" id="inputCity" placeholder="Plate number" asp-for="PlateNumber">
    </div>
    <div class="col-md-12">
        <label for="inputZip" class="form-label">VIN</label>
        <input type="number" class="form-control" id="inputZip" placeholder="Number VIN" asp-for="VIN">
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary" value="Update">Update</button>
    </div>
    <div class="col-md-2">
        <button asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</button>
    </div>
</form>


