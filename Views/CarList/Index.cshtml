@model IEnumerable<CarWorkshop.Models.Car>

@{
    ViewData["Title"] = "Index";
}
<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of client cars</h2>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Mark
                    </th>
                    <th>
                        Model
                    </th>
                    <th>
                        Year of production
                    </th>
                    <th>
                        VIN
                    </th>
                    <th>
                        Plate Number
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Mark</td>
                        <td>@item.Model</td>
                        <td>@item.YearOfProduction</td>
                        <td>@item.VIN</td>
                        <td>@item.PlateNumber</td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="CarList" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="CarList" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                                <a asp-controller="CarHistory" asp-action="Index" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Show history</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
