@model IEnumerable<CarWorkshop.Models.Client>

@{
    ViewData["Title"] = "Index";
}
<div class=" container p-3">
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">List of clients</h2>
    </div>
    <div class="col-6">
        <a asp-controller="AddClient" asp-action="Index" class="btn btn-primary"> Add new Client</a>   
    </div>
</div>
    <br />


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Surname
                </th>
                <th>
                    Email
                </th>
                <th>
                    Address
                </th>
                <th>
                    Post code
                </th>
                <th>
                    Phone number
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.PostCode</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="ClientList" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="ClientList" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                            <a asp-controller="AddCar" asp-action="Create" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Add car</a>
                            <a asp-controller="CarList" asp-action="Index" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Car list</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
</div>
