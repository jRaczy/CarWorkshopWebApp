@model IEnumerable<CarWorkshop.Models.Client>

@{
    ViewData["Title"] = "Index";
}
<div class=" container p-3">
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">List of clients</h2>
    </div>
    <div class="col-6">
        Add new Client
    </div>
</div>
    <br />


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Surname
                </th>
                <th>
                    Email
                </th>
                <th>
                    Address
                </th>
                <th>
                    Post code
                </th>
                <th>
                    Phone number
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.PostCode</td>
                    <td>@item.PhoneNumber</td>
                    <td><button>Add car</button></td>
                </tr>
            }
        </tbody>
    </table>
}
</div>
