@model IEnumerable<CarWorkshop.Models.Client>

@{
    ViewData["Title"] = "Index";
}

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Surname
                </th>
                <th>
                    Email
                </th>
                <th>
                    Address
                </th>
                <th>
                    Post code
                </th>
                <th>
                    Phone number
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>@item.PostCode</td>
                <td>@item.PhoneNumber</td>
                <td><button>Add car</button></td>
            </tr>
            }
        </tbody>
    </table>
}
